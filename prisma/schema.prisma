generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  userName  String      @unique
  password  String
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  organizer Organizer[]
  attendee  Attendee[]
  role      role        @default(attendee)

  @@map("users")
}

model Organizer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  city      String
  country   String
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@map("organizers")
}

model Attendee {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  city      String
  country   String
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@map("attendees")
}

enum role {
  organizer
  attendee
}
